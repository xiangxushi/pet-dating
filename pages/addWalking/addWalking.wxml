<cu-custom bgColor="bg-white text-black" isBack="{{true}}">
  <view slot="content">发布约遛</view>
</cu-custom>
<view class="cu-list menu {{menuBorder?'sm-border':''}} {{menuCard?'card-menu margin-top':''}} margin-top-sm ">
  <view class="cu-item arrow">
    <view class="content">
      <text class="text-black">选择约遛地点</text>
    </view>
    <view class="action">
        <text class="text-grey text-df">朝新嘉园东里-四区</text>
    </view>
  </view>
   
  <view class="cu-item arrow">
    <view class="content">
      <text class="text-black">选择约遛时间</text>
    </view>
    <view class="action">
        <text class="text-grey text-df">请选择</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <view class="content">
      <text class="text-black">对宠友限制</text>
    </view>
    <view class="action">
        <text class="text-grey text-df">无限制</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <view class="content">
      <text class="text-black">对狗狗限制</text>
    </view>
    <view class="action">
        <text class="text-grey text-df">无限制</text>
    </view>
  </view>
  <view class="cu-item arrow">
    <view class="content">
      <text class="text-black">选择自己携带的狗狗狗</text>
    </view>
    <view class="action">
        <text class="text-grey text-df">柴犬</text>
    </view>
  </view>

  <view class='margin-top-sm bg-white text-lg text-black'>
    <view class='padding'>我想对宠友说:</view>
    <view class="cu-form-group">
      <textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaAInput" placeholder="请输入您想说的~"></textarea>
    </view>
  </view>


</view>
<view class="padding flex flex-direction">
  <button class="cu-btn bg-newyellow margin-tb-sm lg round">确定</button>
</view>