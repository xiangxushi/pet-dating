.li{
  margin: 10rpx 20rpx;
  background-color: #fefdf6;
	border-radius: 10rpx;
	border: solid 1rpx #ffd305;
}
.fl{
  display: inline-block;
  padding: 15rpx 0 50rpx 30rpx;
  font-size: 28rpx;
  color: #999999;
}
.fl .h1{
  font-size: 32rpx;
	font-weight: bold;
  color: #000000;
  margin-bottom: 50rpx;
}
.fr{
  float: right;
  margin: 40rpx 30rpx 0 0;
}
.fr image{
  display: inline-block;
  width: 84rpx;
	height: 84rpx;
  border-radius: 50%;
  margin-left: 15rpx;
  vertical-align: middle;
}
.fr image:first-child {
  width: 110rpx;
  height: 110rpx;
}
